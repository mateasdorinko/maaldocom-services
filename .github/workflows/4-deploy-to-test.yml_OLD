name: 4. Deploy to Test

on:
  workflow_dispatch:
    inputs:
      workflow-run-id:
        description: 'Workflow run ID to download EF bundle from (leave empty to skip migrations)'
        required: false
        type: string

jobs:
  deploy-to-test:
    uses: ./.github/workflows/deploy-reusable.yml
    with:
      environment: 'Test'
      app-name: 'app-maaldocomapi-tst-cus'
      workflow-run-id: ${{ inputs.workflow-run-id }}
    secrets:
      publish-profile: ${{ secrets.AZURE_TST_WEBAPP_PUBLISH_PROFILE }}
      migrations-connection-string: ${{ secrets.AZURE_TST_MIGRATIONS_CONNECTION_STRING }}